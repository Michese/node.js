<h1>{{title}}</h1>
<div id="card">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <td>Название</td>
                <td>Количество</td>
                <td>Действия</td>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn waves-effect waves-light btn-remove" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <p><strong>Цена: </strong><span class="price">{{price}}</span></p>

    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>